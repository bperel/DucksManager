<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{% block title %}{% endblock %}</title>
</head>
<body class="{{ bodyClass ?? '' }}">
    <script type="text/javascript">
        window.locale = "{{ app.request.locale }}"
        window.l10nUrl = "{{ asset('build/translations/messages.'~app.request.locale~'.yaml') }}"
        window.imagePath = "{{ asset('build/images/logo_small.png') | replace({'/logo_small.png': ''}) }}"
        window.userId = "{{ app.user ? app.user.id : '' }}"
        window.username = "{{ app.user ? app.user.username : '' }}"
    </script>

    {% block menu %}{% endblock %}
    <div id="app" {% for key, value in (vueProps ?? {}) %} {{ key }}="{{ value }}"{% endfor %}></div>
    {% block content %}{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
